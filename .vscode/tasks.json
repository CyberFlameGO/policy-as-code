{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Tests",
            "type": "shell",
            "command": "python -m unittest discover  -v -s ./tests -p 'test_*.py'",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Docs",
            "type": "shell",
            "command": "pipenv run sphinx-build -b html docs/ ./public",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}